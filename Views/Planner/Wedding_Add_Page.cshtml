 @{
    ViewData["Title"] = "Home Page";
}
@model Wedding_Planner.Models.Wedding

<header>
    <ul>
        <a href="/Planner">Dashboard</a>
        <a href="/Logout">Log Out</a>
    </ul>
    <p>@ViewBag.User.FirstName @ViewBag.User.LastName</p>
</header>

<h1>Plan Your Wedding</h1>
<div class="division"></div>

<form asp-action="Create_Wedding" asp-controller="Planner" method="POST">
    <div class="form-group">
        <label asp-for="PlayerOne">Person #1 First Name:</label><span asp-validation-for="PlayerOne"></span>
        <input asp-for="PlayerOne" class="form-control length" placeholder="---">
    </div>
    <div class="form-group">
        <label asp-for="PlayerTwo">Person #2 First Name:</label><span asp-validation-for="PlayerTwo"></span>
        <input asp-for="PlayerTwo" class="form-control length" placeholder="---">
    </div>
    <div class="form-group">
        <label asp-for="Date">Wedding Date:</label><span asp-validation-for="Date"></span>
        <input asp-for="Date" type="date" class="form-control length" placeholder="---">
    </div>
    <div class="form-group">
        <label asp-for="Address">Wedding Address:</label><span asp-validation-for="Address"></span>
        <input asp-for="Address" class="form-control length" placeholder="---">
    </div>
    
    <button type="submit" class="btn btn-dark">Create</button>
</form>
